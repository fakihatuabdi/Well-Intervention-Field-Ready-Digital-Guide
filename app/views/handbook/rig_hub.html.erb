<div class="fade-in w-full max-w-6xl mx-auto">
  <div class="mb-8">
    <%= link_to handbook_wk_rokan_path, class: "text-sky-600 hover:text-sky-800 mb-4 inline-flex items-center gap-2 transition-all duration-300" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to WK Rokan
    <% end %>
    <h1 class="text-4xl font-bold text-slate-800 mb-2 mt-4">Rig Hub</h1>
    <p class="text-slate-600">Comprehensive guide for Rig Hub operations in WK Rokan</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% 
      @wk_rokan_articles = Article.where(category: 'wk_rokan', published: true).order(:id)
    %>
    
    <% @wk_rokan_articles.each_with_index do |article, index| %>
      <%= link_to article_path(article), class: "block bg-white rounded-xl shadow-lg p-6 hover-lift border elegant-border transition-all duration-300 scale-in", style: "animation-delay: #{index * 0.05}s;" do %>
        <div class="flex items-start gap-4">
          <div class="p-3 rounded-lg bg-emerald-50">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="font-bold text-lg text-slate-800 mb-2"><%= article.title %></h3>
            <p class="text-slate-600 text-sm mb-3">Content will be added soon</p>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-gradient-to-r from-amber-100 to-yellow-100 text-amber-800 font-medium">
              Coming Soon
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
