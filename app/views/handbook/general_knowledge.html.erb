<div class="fade-in w-full max-w-6xl mx-auto">
  <div class="mb-8">
    <%= link_to handbook_path, class: "text-sky-600 hover:text-sky-800 mb-4 inline-flex items-center gap-2 transition-all duration-300" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Handbook
    <% end %>
    <h1 class="text-4xl font-bold text-slate-800 mb-2 mt-4">General Knowledge</h1>
    <p class="text-slate-600">Fundamental concepts and best practices for well intervention operations</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% 
      @general_knowledge_articles = Article.where(category: 'general_knowledge', published: true).order(:id)
    %>
    
    <% @general_knowledge_articles.each_with_index do |article, index| %>
      <%= link_to article_path(article), class: "block" do %>
        <div class="bg-white rounded-xl shadow-lg p-6 hover-lift border elegant-border transition-all duration-300 scale-in h-full min-h-[200px] flex flex-col justify-between">
          <div class="flex items-start gap-4">
            <div class="p-3 rounded-lg bg-sky-50 flex-shrink-0">
              <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-slate-800 mb-2"><%= article.title %></h3>
              <p class="text-slate-600 text-sm mb-3">Content will be added soon</p>
              <div class="flex items-center gap-1 text-sm text-slate-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span id="view-count-<%= article.id %>">0</span> views
              </div>
            </div>
          </div>
          <div class="mt-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-gradient-to-r from-amber-100 to-yellow-100 text-amber-800 font-medium">
              Coming Soon
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<script data-turbo-eval="false">
  (function() {
    let initialized = false;
    
    function initializeGeneralKnowledgeCounters() {
      if (initialized) return;
      
      if (typeof firebaseViewCounter === 'undefined' || !firebaseViewCounter.isInitialized) {
        setTimeout(initializeGeneralKnowledgeCounters, 300);
        return;
      }
      
      initialized = true;
      console.log('General Knowledge: Loading view counters');
      
      const articleIds = <%= raw @general_knowledge_articles.pluck(:id).to_json %>;
      
      articleIds.forEach(articleId => {
        firebaseViewCounter.getArticleViews(articleId)
          .then(count => {
            const element = document.getElementById(`view-count-${articleId}`);
            if (element) {
              element.textContent = count || 0;
            }
          })
          .catch(error => console.error(`Error loading count for article ${articleId}:`, error));
        
        // Watch for real-time updates
        firebaseViewCounter.watchArticleViews(articleId, (count) => {
          const element = document.getElementById(`view-count-${articleId}`);
          if (element) {
            element.textContent = count || 0;
          }
        });
      });
    }
    
    // Initialize
    document.addEventListener('DOMContentLoaded', initializeGeneralKnowledgeCounters);
    document.addEventListener('turbo:load', function() {
      initialized = false;
      initializeGeneralKnowledgeCounters();
    });
  })();
</script>
