<div class="fade-in w-full max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-slate-800 mb-2">Handbook</h1>
    <p class="text-slate-600">Comprehensive guide for well intervention operations</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- General Knowledge -->
    <%= link_to handbook_general_knowledge_path, class: "block" do %>
      <div class="bg-white rounded-2xl p-8 shadow-lg hover-lift border elegant-border hover:border-sky-300 transition-all duration-300 scale-in h-full min-h-[240px] flex flex-col justify-between">
        <div class="flex items-start gap-4">
          <div class="bg-gradient-to-br from-sky-100 to-cyan-100 p-4 rounded-xl flex-shrink-0">
            <svg class="w-20 h-20 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-slate-800 mb-2">General Knowledge</h2>
            <p class="text-slate-600 mb-4">Fundamental concepts and best practices</p>
          </div>
        </div>
        <div class="mt-4">
          <span class="px-3 py-1 bg-gradient-to-r from-sky-50 to-cyan-50 text-sky-700 rounded-full text-sm font-medium inline-block">11 Articles</span>
        </div>
      </div>
    <% end %>

    <!-- WK Rokan Operation -->
    <%= link_to handbook_wk_rokan_path, class: "block" do %>
      <div class="bg-white rounded-2xl p-8 shadow-lg hover-lift border elegant-border hover:border-indigo-300 transition-all duration-300 scale-in h-full min-h-[240px] flex flex-col justify-between" style="animation-delay: 0.1s;">
        <div class="flex items-start gap-4">
          <div class="bg-gradient-to-br from-indigo-100 to-blue-100 p-4 rounded-xl flex-shrink-0">
            <%= image_tag "wk_rokan_logo.png", class: "w-20 h-20", alt: "WK Rokan Operation" %>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-slate-800 mb-2">WK Rokan Operation</h2>
            <p class="text-slate-600 mb-4">Specific operational guidelines</p>
          </div>
        </div>
        <div class="mt-4">
          <span class="px-3 py-1 bg-gradient-to-r from-indigo-50 to-blue-50 text-indigo-700 rounded-full text-sm font-medium inline-block">Multiple Divisions</span>
        </div>
      </div>
    <% end %>
  </div>
</div>
