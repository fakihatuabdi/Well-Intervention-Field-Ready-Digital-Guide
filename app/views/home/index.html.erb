<div class="fade-in w-full">
  <!-- Hero Section -->
  <div class="mb-12 bg-gradient-to-r from-sky-500 via-cyan-500 to-blue-500 rounded-2xl p-8 lg:p-12 text-white shadow-2xl hover-lift">
    <div class="max-w-4xl">
      <div class="flex items-center gap-6 mb-3">
        <%= image_tag "logo.png", alt: "Company Logo", class: "object-contain scale-in flex-shrink-0", style: "width: 64px; height: 64px;" %>
        <div class="flex-1">
          <h1 class="text-4xl lg:text-5xl font-bold mb-2 slide-in">Well Intervention Field-Ready Digital Guide</h1>
        </div>
      </div>
      <style>
        @media (min-width: 1024px) {
          img[alt="Company Logo"] {
            width: 256px !important;
            height: 256px !important;
          }
        }
      </style>
      <p class="text-lg text-sky-100 mb-6 slide-in" style="animation-delay: 0.1s;">
        Comprehensive Digital Companion for Upstream Oil & Gas Operations
      </p>
      <div class="flex flex-wrap gap-4 slide-in" style="animation-delay: 0.2s;">
        <%= link_to "Explore Handbook", handbook_path, class: "bg-white text-sky-700 px-6 py-3 rounded-lg font-semibold hover:bg-sky-50 transition-all duration-300 inline-block shadow-lg hover:shadow-xl" %>
        <%= link_to "Search Articles", search_path, class: "bg-sky-700/50 hover:bg-sky-700/70 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 inline-block backdrop-blur-sm" %>
      </div>
    </div>
  </div>

  <!-- Case Studies / Lessons Learned -->
  <div class="mb-12 fade-in" style="animation-delay: 0.2s;">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
        <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Case Studies & Lessons Learned
      </h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @case_studies.any? %>
        <% @case_studies.each do |case_study| %>
          <div class="bg-white rounded-xl shadow-lg p-6 hover-lift border border-sky-100 elegant-border scale-in">
            <h3 class="text-lg font-semibold mb-2 text-slate-800"><%= case_study.title %></h3>
            <p class="text-slate-600 text-sm mb-4"><%= truncate(case_study.description, length: 120) %></p>
            <a href="#" class="text-sky-600 hover:text-sky-800 font-medium text-sm inline-flex items-center gap-1 transition-all duration-300">
              Read More 
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        <% end %>
      <% else %>
        <div class="col-span-full text-center py-12 bg-slate-50 rounded-xl">
          <svg class="w-16 h-16 mx-auto text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-slate-400">Case studies coming soon...</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Popular Handbook Articles -->
  <div class="mb-12 bg-white rounded-2xl shadow-lg p-6 lg:p-8 hover-lift fade-in elegant-border" style="animation-delay: 0.3s;">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
        <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
        </svg>
        Popular Articles
      </h2>
    </div>
    
    <div class="space-y-3">
      <% if @popular_articles.any? %>
        <% @popular_articles.each do |article| %>
          <%= link_to article_path(article), class: "block p-4 bg-gradient-to-r from-slate-50 to-sky-50/30 rounded-lg hover:shadow-lg transition-all duration-300 border elegant-border scale-in" do %>
            <h4 class="font-semibold text-slate-800 mb-2"><%= article.title %></h4>
            <div class="flex items-center gap-4 text-sm text-slate-600">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span id="view-count-<%= article.id %>" class="font-medium text-sky-700">0</span> views
              </span>
              <span class="text-slate-400 capitalize"><%= article.category.gsub('_', ' ') %></span>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="text-center py-8 bg-slate-50 rounded-lg">
          <p class="text-slate-400">No articles available yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Updates & Notices -->
  <div class="glass-effect rounded-2xl p-6 lg:p-8 shadow-lg fade-in hover-lift elegant-border" style="animation-delay: 0.4s;">
    <h3 class="text-2xl font-bold text-slate-800 mb-6 flex items-center gap-2">
      <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
      </svg>
      Updates & Notices
    </h3>
    
    <div class="space-y-3">
      <% if @updates.any? %>
        <% @updates.each do |update| %>
          <div class="border-l-4 border-sky-500 pl-4 py-3 bg-white rounded-r-lg shadow-sm scale-in">
            <h4 class="font-semibold text-slate-800 mb-1"><%= update.title %></h4>
            <p class="text-sm text-slate-600 mb-2"><%= update.content %></p>
            <p class="text-xs text-slate-400">
              <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= update.published_at.strftime("%B %d, %Y") %>
            </p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8 bg-slate-50 rounded-lg">
          <p class="text-slate-400">No updates at this time</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Firebase Integration -->
<script>
  // Function to initialize view counter for home page
  function initializeHomeViewCounter() {
    if (typeof firebaseViewCounter === 'undefined') {
      console.log('Waiting for firebaseViewCounter...');
      setTimeout(initializeHomeViewCounter, 500);
      return;
    }
    
    console.log('Home: Firebase initialized:', firebaseViewCounter.isInitialized);
    
    if (firebaseViewCounter.isInitialized) {
      const popularArticles = <%= raw @popular_articles.pluck(:id).to_json %>;
      
      // Load initial counts and watch for real-time updates
      popularArticles.forEach(articleId => {
        // Get initial count from Firebase
        firebaseViewCounter.getArticleViews(articleId)
          .then(count => {
            console.log(`Article ${articleId} initial count:`, count);
            const element = document.getElementById(`view-count-${articleId}`);
            if (element) {
              element.textContent = count || 0;
            }
          })
          .catch(error => console.error(`Error getting count for article ${articleId}:`, error));
        
        // Watch for real-time updates
        firebaseViewCounter.watchArticleViews(articleId, (count) => {
          const element = document.getElementById(`view-count-${articleId}`);
          if (element) {
            element.textContent = count || 0;
          }
        });
      });
    }
  }
  
  // Run on initial load AND on every Turbo navigation
  document.addEventListener('DOMContentLoaded', initializeHomeViewCounter);
  document.addEventListener('turbo:load', initializeHomeViewCounter);
  document.addEventListener('turbo:render', initializeHomeViewCounter);
</script>
