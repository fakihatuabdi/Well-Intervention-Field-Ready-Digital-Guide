<div class="fade-in w-full max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-slate-800 mb-2">Search Articles</h1>
    <p class="text-slate-600">Find articles, topics, and content across the handbook</p>
  </div>

  <!-- Search Form -->
  <div class="mb-8 relative">
    <%= form_with url: search_path, method: :get, class: "relative", id: "search-form" do |f| %>
      <div class="flex gap-2">
        <%= f.text_field :query, 
            value: @query,
            placeholder: "Type to search articles, keywords, topics...",
            class: "flex-1 px-4 py-4 rounded-xl border-2 border-slate-200 focus:border-sky-500 focus:ring-2 focus:ring-sky-200 outline-none transition-all duration-300",
            autofocus: true,
            autocomplete: "off",
            id: "search-input" %>
        <%= f.submit "Search", class: "px-8 py-4 bg-gradient-to-r from-sky-500 to-cyan-500 hover:from-sky-600 hover:to-cyan-600 text-white font-semibold rounded-xl transition-all duration-300 cursor-pointer shadow-lg hover:shadow-xl" %>
      </div>
      
      <!-- Live Search Suggestions Dropdown -->
      <div id="suggestions-dropdown" class="absolute top-full left-0 right-0 mt-2 bg-white rounded-xl shadow-2xl border border-sky-200 max-h-96 overflow-y-auto z-50 hidden">
        <div id="suggestions-list" class="py-2">
          <!-- Suggestions will be populated by JavaScript -->
        </div>
      </div>
    <% end %>
  </div>

  <!-- Search Results -->
  <% if @query.present? %>
    <div class="mb-4 text-slate-600">
      <% if @articles.any? %>
        Found <%= @articles.total_count %> result(s) for "<span class="font-semibold text-slate-800"><%= @query %></span>"
      <% else %>
        No results found for "<span class="font-semibold text-slate-800"><%= @query %></span>"
      <% end %>
    </div>

    <div class="space-y-4">
      <% @articles.each do |article| %>
        <%= link_to article_path(article), class: "block" do %>
          <div class="bg-white rounded-xl shadow-md p-6 hover-lift border border-slate-100 transition-all duration-300">
            <div class="flex items-start justify-between gap-4 mb-2">
              <h3 class="text-xl font-bold text-slate-800"><%= article.title %></h3>
              <span class="px-3 py-1 bg-gradient-to-r from-sky-100 to-cyan-100 text-sky-700 rounded-full text-xs font-medium whitespace-nowrap">
                <%= article.category.gsub('_', ' ').titleize %>
              </span>
            </div>
            
            <% if article.subcategory.present? %>
              <p class="text-sm text-slate-500 mb-3">
                <%= article.subcategory.gsub('_', ' ').titleize %>
              </p>
            <% end %>
            
            <p class="text-slate-600 mb-3">
              <%= truncate(article.content, length: 200) %>
            </p>
            
            <div class="flex items-center gap-4 text-sm text-slate-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <%= article.view_count %> views
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @articles.total_pages > 1 %>
      <div class="mt-8 flex justify-center">
        <%= paginate @articles %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16 bg-slate-50 rounded-2xl">
      <svg class="w-20 h-20 mx-auto text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <h3 class="text-xl font-semibold text-slate-600 mb-2">Start Searching</h3>
      <p class="text-slate-500">Enter keywords to search across all articles and content</p>
    </div>
  <% end %>
</div>

<script>
  // Search page with Turbo support
  (function() {
    const stateKey = 'search_page_state';
    
    function cleanup() {
      const state = window[stateKey];
      if (state) {
        if (state.debounceTimer) {
          clearTimeout(state.debounceTimer);
        }
        state.eventListeners?.forEach(({ element, event, handler }) => {
          if (element) element.removeEventListener(event, handler);
        });
        delete window[stateKey];
      }
    }
    
    function initialize() {
      cleanup();
      
      const searchInput = document.getElementById('search-input');
      const suggestionsDropdown = document.getElementById('suggestions-dropdown');
      const suggestionsList = document.getElementById('suggestions-list');
      
      if (!searchInput || !suggestionsDropdown || !suggestionsList) return;
      
      window[stateKey] = {
        debounceTimer: null,
        eventListeners: []
      };
      
      const state = window[stateKey];
      
      suggestionsDropdown.classList.add('hidden');
      
      const inputHandler = function() {
        const query = this.value.trim();
        
        clearTimeout(state.debounceTimer);
        
        if (query.length < 2) {
          suggestionsDropdown.classList.add('hidden');
          return;
        }
        
        state.debounceTimer = setTimeout(() => {
          fetchSuggestions(query);
        }, 300);
      };
      searchInput.addEventListener('input', inputHandler);
      state.eventListeners.push({ element: searchInput, event: 'input', handler: inputHandler });
    
    async function fetchSuggestions(query) {
      try {
        const response = await fetch(`/search/suggestions?query=${encodeURIComponent(query)}`);
        const data = await response.json();
        
        if (data.articles.length > 0 || data.menus.length > 0) {
          let html = '';
          
          // Show menus first if any
          if (data.menus.length > 0) {
            html += '<div class="px-4 py-2 bg-slate-50 border-b border-slate-200"><p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Pages & Features</p></div>';
            html += data.menus.map(menu => `
              <a href="${menu.url}" 
                 class="block px-4 py-3 hover:bg-gradient-to-r hover:from-sky-50 hover:to-cyan-50 transition-all duration-200 border-b border-slate-100">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 mt-0.5">
                    ${getMenuIcon(menu.icon)}
                  </div>
                  <div class="flex-1">
                    <p class="font-semibold text-slate-800 text-sm mb-0.5">${highlightMatch(menu.title, query)}</p>
                    <p class="text-xs text-slate-500">${menu.description}</p>
                  </div>
                  <svg class="w-4 h-4 text-sky-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            `).join('');
          }
          
          // Show articles
          if (data.articles.length > 0) {
            html += '<div class="px-4 py-2 bg-slate-50 border-b border-slate-200"><p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Articles</p></div>';
            html += data.articles.map(article => `
              <a href="${article.url}" 
                 class="block px-4 py-3 hover:bg-gradient-to-r hover:from-sky-50 hover:to-cyan-50 transition-all duration-200 border-b border-slate-100 last:border-b-0">
                <div class="flex items-start justify-between gap-2">
                  <div class="flex-1">
                    <p class="font-semibold text-slate-800 text-sm mb-1">${highlightMatch(article.title, query)}</p>
                    <p class="text-xs text-slate-500">${article.category.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</p>
                  </div>
                  <svg class="w-4 h-4 text-sky-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            `).join('');
          }
          
          suggestionsList.innerHTML = html;
          suggestionsDropdown.classList.remove('hidden');
        } else {
          suggestionsList.innerHTML = `
            <div class="px-4 py-6 text-center text-slate-500 text-sm">
              <svg class="w-12 h-12 mx-auto text-slate-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="mb-1 font-medium">No results found for "${query}"</p>
              <p class="text-xs">Try different keywords or check spelling</p>
            </div>
          `;
          suggestionsDropdown.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error fetching suggestions:', error);
        suggestionsList.innerHTML = `
          <div class="px-4 py-6 text-center text-red-500 text-sm">
            <p>Error loading suggestions. Please try again.</p>
          </div>
        `;
        suggestionsDropdown.classList.remove('hidden');
      }
    }
    
    function getMenuIcon(iconName) {
      const icons = {
        'home': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>',
        'book': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>',
        'book-open': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>',
        'map': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path></svg>',
        'wrench': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>',
        'search': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>',
        'calculator': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>',
        'chat': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path></svg>',
        'bookmark': '<svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path></svg>'
      };
      return icons[iconName] || icons['home'];
    }
    
    // Highlight matching text
    function highlightMatch(text, query) {
      const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
      return text.replace(regex, '<span class="bg-sky-200 text-sky-900 font-bold rounded px-1">$1</span>');
    }
    
    // Close dropdown when clicking outside
    const documentClickHandler = function(e) {
      if (!searchInput.contains(e.target) && !suggestionsDropdown.contains(e.target)) {
        suggestionsDropdown.classList.add('hidden');
      }
    };
    document.addEventListener('click', documentClickHandler);
    state.eventListeners.push({ element: document, event: 'click', handler: documentClickHandler });
    
    // Show dropdown again on focus if there's text
    const focusHandler = function() {
      if (this.value.trim().length >= 2) {
        const event = new Event('input');
        this.dispatchEvent(event);
      }
    };
    searchInput.addEventListener('focus', focusHandler);
    state.eventListeners.push({ element: searchInput, event: 'focus', handler: focusHandler });
    
    // Close dropdown on escape key
    const keydownHandler = function(e) {
      if (e.key === 'Escape') {
        suggestionsDropdown.classList.add('hidden');
      }
    };
    searchInput.addEventListener('keydown', keydownHandler);
    state.eventListeners.push({ element: searchInput, event: 'keydown', handler: keydownHandler });
  }
  
  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initialize, { once: true });
  } else {
    initialize();
  }
  
  // Cleanup before cache
  document.addEventListener('turbo:before-cache', cleanup, { once: true });
})();
</script>
