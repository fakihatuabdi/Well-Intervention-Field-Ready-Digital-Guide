<div class="fade-in w-full max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-slate-800 mb-2">Well Intervention Calculators</h1>
    <p class="text-slate-600">Professional calculation tools for field operations</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% 
      calculators = [
        { 
          name: 'Initial Killing & Pumping', 
          description: 'Calculate kill weight and pumping rates for well control operations',
          icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
          color: 'violet'
        },
        { 
          name: 'Pump Stuck Suspension', 
          description: 'Suspension calculations for stuck pump scenarios',
          icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
          color: 'amber'
        },
        { 
          name: 'Other Operation Calculations', 
          description: 'Additional well intervention calculation tools',
          icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
          color: 'emerald'
        },
        { 
          name: 'Pressure Calculations', 
          description: 'Calculate downhole pressures and gradients',
          icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
          color: 'purple'
        },
        { 
          name: 'Volume & Capacity', 
          description: 'Wellbore volume and fluid capacity calculations',
